{
  "manifest_version": 3,
  "name": "GitHub Confetti",
  "version": "1.1",
  "description": "Celebrate GitHub merges with confetti and sound!",
  "permissions": ["storage"],
  "action": {
    "default_popup": "index.html",
    "default_title": "GitHub Confetti"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["contentScript.bundle.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sounds/confetti-pop.mp3"],
      "matches": ["<all_urls>"]
    }
  ]
}
